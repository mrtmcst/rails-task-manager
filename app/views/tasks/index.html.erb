<h2>List of tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'Delete', delete_task_path(task), data: {
        turbo_method: 'delete',
        turbo_confirm: 'Are you sure?'
      }%>
    </li>
  <% end %>
  <%= link_to 'Add a task', new_task_path %>
</ul>
